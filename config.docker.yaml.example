server:
  port: "8080"
  mode: "release"

database:
  host: "postgres"
  port: 5432
  user: "timelocker"
  password: "xxx"
  dbname: "timelocker_db"
  sslmode: "disable"

redis:
  host: "redis"
  port: 6379
  password: ""
  db: 0

jwt:
  secret: "xxx"
  access_expiry: "24h"
  refresh_expiry: "48h"

# RPC配置 - 用于监听链上事件
rpc:
  # RPC提供商配置（用户只需要填写API key）
  alchemy_api_key: "xxx"
  infura_api_key: "xxx"
  
  # 当前使用的提供商（alchemy、infura 或 custom）
  provider: "alchemy"
  
  # 是否包含测试网
  include_testnets: true

# 邮件服务配置
email:
  smtp_host: "smtp.zoho.com"
  smtp_port: 587
  smtp_username: "notifications@timelock.tech"
  smtp_password: "xxx"
  from_name: "Timelock Notification"
  from_email: "notifications@timelock.tech"

  # 邮件通知功能配置
  verification_code_expiry: "5m"

  # 邮件模板配置
  email_url: "https://timelock.tech"
